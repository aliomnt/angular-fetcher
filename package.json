{
  "name": "angular-fetcher",
  "version": "20.1.0",
  "description": "Signal-based state management for remote API data in Angular with support for reactive loading, error tracking, optimistic updates, and auto refetching.",
  "author": "Ali Montazeri <benmontazeri@gmail.com>",
  "license": "MIT",
  "keywords": [
    "angular",
    "signal",
    "state-management",
    "remote-state",
    "api-state",
    "http",
    "angular-signal",
    "optimistic-update",
    "loading-state",
    "error-handling",
    "fetch-state"
  ],
  "main": "dist/public-api.js",
  "types": "dist/public-api.d.ts",
  "exports": {
    ".": {
      "import": "./dist/public-api.js",
      "types": "./dist/public-api.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aliomnt/angular-fetcher.git"
  },
  "bugs": {
    "url": "https://github.com/aliomnt/angular-fetcher/issues"
  },
  "homepage": "https://github.com/aliomnt/angular-fetcher#readme",
  "peerDependencies": {
    "@angular/core": "^20.0.0",
    "rxjs": "^7.4.0"
  },
  "devDependencies": {
    "typescript": "~5.8.0"
  }
}
